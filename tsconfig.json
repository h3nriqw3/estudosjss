{
    "compilerOptions": {
       "outDir": "./dist/js" ,
       "target": "ES2022",
       "noEmitOnError": true,
       "noImplicitAny": true,
       "module": "CommonJS",
       "moduleResolution": "node",//node para resolver modulos
       "esModuleInterop": true, //compatibilidade com modulos ES
       "skipLibCheck": true
     },
      "include": ["app/**/*"]
}